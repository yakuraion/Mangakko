<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style" />

    <style name="ThemeOverlay" />

    <style name="Style.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="backgroundTint">?surfaceColor</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.BottomNavigationView">
        <item name="colorPrimary">?accentColor</item>
    </style>

    <style name="Style.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Style.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">?accentColor</item>
    </style>

    <style name="Style.ScoreView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Title4</item>
        <item name="android:textColor">?accentColor</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
