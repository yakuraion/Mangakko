<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme" />

    <style name="Theme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:windowBackground">?windowBackground</item>

        <item name="appBarLayoutStyle">@style/Style.AppBarLayout</item>
    </style>

    <style name="Theme.App" parent="Theme.Base">
        <item name="windowBackground">@color/white</item>
        <item name="textColor">@color/text_dark</item>
    </style>

</resources>
