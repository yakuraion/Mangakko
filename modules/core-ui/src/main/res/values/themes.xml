<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme" />

    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?statusBarColor</item>
        <item name="android:navigationBarColor">?navigationBarColor</item>

        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:windowBackground">?windowBackgroundColor</item>

        <item name="bottomNavigationStyle">@style/Style.BottomNavigationView</item>

        <item name="appBarLayoutStyle">@style/Style.AppBarLayout</item>

        <item name="circularProgressIndicatorStyle">@style/Style.CircularProgressIndicator</item>
    </style>

    <style name="Theme.App" parent="Theme.Base">
        <item name="accentColor">@color/amber_dark</item>

        <item name="android:colorEdgeEffect">@color/amber_dark_30</item>

        <item name="statusBarColor">@color/white_50</item>
        <item name="navigationBarColor">@color/white_50</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>

        <item name="windowBackgroundColor">@color/grey_90_100</item>
        <item name="surfaceColor">@color/white</item>

        <item name="textColor">@color/text_dark</item>
        <item name="behindTextWithAlphaColor">@color/white_75</item>

        <item name="placeholderColor">@color/grey_80_100</item>

        <item name="dividerColor">@color/grey_80_100</item>
    </style>

</resources>
